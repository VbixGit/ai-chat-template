############################################
# KISSFLOW CUSTOM COMPONENT - ENVIRONMENT CONFIGURATION
# 
# Copy this file to .env.local (for development) or set in your deployment platform
# DO NOT commit actual secrets to version control
############################################

############################################
# OpenAI
############################################
REACT_APP_OPENAI_API_KEY=__PUT_KEY_HERE__
REACT_APP_OPENAI_CHAT_MODEL=gpt-4o-mini
REACT_APP_OPENAI_EMBED_MODEL=text-embedding-3-large

############################################
# Weaviate
############################################
REACT_APP_WEAVIATE_URL=__PUT_WEAVIATE_URL_HERE__
REACT_APP_WEAVIATE_API_KEY=__PUT_WEAVIATE_API_KEY_HERE__

# Weaviate classes per flow
REACT_APP_WEAVIATE_CLASS_HR=__WEAVIATE_CLASS_FOR_HR__
REACT_APP_WEAVIATE_CLASS_TOR=__WEAVIATE_CLASS_FOR_TOR__
REACT_APP_WEAVIATE_CLASS_CRM=__WEAVIATE_CLASS_FOR_CRM__
REACT_APP_WEAVIATE_CLASS_LEAVE_POLICY=__WEAVIATE_CLASS_FOR_LEAVE_POLICY__

# Retrieval parameters
REACT_APP_WEAVIATE_TOPK_DEFAULT=8
REACT_APP_WEAVIATE_SCORE_THRESHOLD=0

############################################
# Kissflow
############################################
REACT_APP_KISSFLOW_DOMAIN=__PUT_KISSFLOW_DOMAIN_HERE__
REACT_APP_KISSFLOW_ACCOUNT_ID=__PUT_ACCOUNT_ID_HERE__
REACT_APP_KISSFLOW_APP_ID=__PUT_APP_ID_HERE__

# SDK Authentication (if using REST API)
REACT_APP_KISSFLOW_ACCESS_KEY_ID=__PUT_ACCESS_KEY_ID_HERE__
REACT_APP_KISSFLOW_ACCESS_KEY_SECRET=__PUT_ACCESS_KEY_SECRET_HERE__

# CRM Flow
REACT_APP_KISSFLOW_CRM_PROCESS_ID=__CRM_PROCESS_ID__
REACT_APP_KISSFLOW_CRM_REPORT_ID=__CRM_REPORT_ID__

# Leave Request Flow
REACT_APP_KISSFLOW_LEAVE_PROCESS_ID=__LEAVE_PROCESS_ID__
REACT_APP_KISSFLOW_LEAVE_BALANCE_REPORT_ID=__LEAVE_BALANCE_REPORT_ID__
REACT_APP_KISSFLOW_LEAVE_BALANCE_DATASET_ID=__LEAVE_BALANCE_DATASET_ID__

############################################
# External Database Allow-list
############################################
# Comma-separated list of connection keys to enable
# Example: conn1,conn2
REACT_APP_EXTERNAL_DB_CONN_KEYS=

# Connection 1 (optional example)
# REACT_APP_EXTERNAL_DB_conn1_BASE_URL=https://example-api.com
# REACT_APP_EXTERNAL_DB_conn1_AUTH_TYPE=bearer|apikey|none
# REACT_APP_EXTERNAL_DB_conn1_AUTH_VALUE=__AUTH_TOKEN_OR_KEY__
# REACT_APP_EXTERNAL_DB_conn1_ALLOWED_PATHS=/api/v1/*,/search/*

############################################
# System Prompt Configuration
############################################
# These IDs map to system prompts stored in Kissflow Page variables
# The app will load actual prompts from Kissflow at runtime
REACT_APP_SYSTEM_PROMPT_HR_ID=__SP_HR_ID__
REACT_APP_SYSTEM_PROMPT_TOR_ID=__SP_TOR_ID__
REACT_APP_SYSTEM_PROMPT_CRM_ID=__SP_CRM_ID__
REACT_APP_SYSTEM_PROMPT_LEAVE_ID=__SP_LEAVE_ID__

############################################
# Flow Categories
############################################
# Display names for flows in the UI
REACT_APP_FLOW_CATEGORY_HR=HR
REACT_APP_FLOW_CATEGORY_TOR=TOR
REACT_APP_FLOW_CATEGORY_CRM=CRM
REACT_APP_FLOW_CATEGORY_LEAVE=Leave Request